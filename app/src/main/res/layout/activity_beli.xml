<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Beli.BeliActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="152dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/benner_beli" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_bayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:text="Checkout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:paddingLeft="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/identitas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Identitas Barang"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/Merek"
                                    android:layout_width="122dp"
                                    android:layout_height="wrap_content"
                                    android:text="Nama Barang   :" />

                                <TextView
                                    android:id="@+id/txt_merek"
                                    android:layout_width="185dp"
                                    android:layout_height="wrap_content"
                                    android:text="TextView" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="224dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/Harga"
                                    android:layout_width="122dp"
                                    android:layout_height="wrap_content"
                                    android:text="Harga                 :" />

                                <TextView
                                    android:id="@+id/txt_harga"
                                    android:layout_width="185dp"
                                    android:layout_height="wrap_content"
                                    android:text="TextView" />
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Data Diri"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:text="Nama " />

                                <EditText
                                    android:id="@+id/et_nama"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:hint="Masukan nama anda"
                                    android:inputType="textPersonName" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Alamat Lengkap" />

                                <EditText
                                    android:id="@+id/et_alamat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:inputType="textLongMessage"
                                    android:hint="Masukan alamat lengkap" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView11"
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Nomer Telpon" />

                                <EditText
                                    android:id="@+id/et_telpon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:inputType="phone"
                                    android:hint="Masukan nomer telpon" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Metode Pembayaran"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="109dp"
                                    android:layout_height="wrap_content"
                                    android:text="Transfer ke :" />

                                <TextView
                                    android:id="@+id/bank"
                                    android:layout_width="287dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=". . . ." />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView10"
                                    android:layout_width="203dp"
                                    android:layout_height="121dp"
                                    app:srcCompat="@drawable/bank_mandiri" />

                                <ImageView
                                    android:id="@+id/imageView11"
                                    android:layout_width="match_parent"
                                    android:layout_height="121dp"
                                    app:srcCompat="@drawable/bank_bri" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:layout_width="394dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_mandiri"
                                        android:layout_width="203dp"
                                        android:layout_height="match_parent"
                                        android:onClick="bank"
                                        android:text="Bank Mandiri" />

                                    <RadioButton
                                        android:id="@+id/rb_bri"
                                        android:onClick="bank"
                                        android:layout_width="230dp"
                                        android:layout_height="wrap_content"
                                        android:text="Bank BRI"/>
                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="176dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="158dp"
                                    android:layout_height="wrap_content"
                                    android:text="Kurir Pengiriman"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/kurir"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=". . . ." />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="116dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView16"
                                    android:layout_width="203dp"
                                    android:layout_height="121dp"
                                    app:srcCompat="@drawable/jne" />

                                <ImageView
                                    android:id="@+id/imageView17"
                                    android:layout_width="wrap_content"
                                    android:layout_height="121dp"
                                    app:srcCompat="@drawable/tiki" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:layout_width="394dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_jne"
                                        android:layout_width="203dp"
                                        android:layout_height="wrap_content"
                                        android:text="JNE" />

                                    <RadioButton
                                        android:id="@+id/rb_tiki"
                                        android:layout_width="203dp"
                                        android:layout_height="wrap_content"
                                        android:text="TIKI" />
                                </RadioGroup>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView17"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No Rekening" />

                            <TextView
                                android:id="@+id/no_rek"
                                android:textSize="34dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Klik Untuk Melihat No Rekening" />

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                app:srcCompat="@drawable/gratis_ongkir1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_bayar"
                        android:layout_width="204dp"
                        android:layout_height="56dp"
                        android:text="BAYAR" />

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="BATAL" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>

